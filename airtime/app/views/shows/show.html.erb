<p id="notice"><%= notice %></p>

<h2>TV-Show "<%= @show.name %>"</h2>

<div id="coverart">
  <%= image_tag("covers/show-"+@show.id.to_s+".jpg", :alt => "Series Cover") %>
</div>

<p class="description">
  <b>Started on:</b> <%= @show.date.month %>/<%= @show.date.year %><br />
  <b>Description:</b> <%= @show.description %>
</p>


<% if current_user %>

<% @subscription = Subscribe.where("user_id = ? AND show_id = ?", current_user.id, @show.id) #find existing subscription %>

<% if @subscription.blank? #if no subscription is found %>
    <p>No subscription yet.</p>

<% else %>
    <p>You already subscribed to this show. Subscription ID: <%= @subscription.id.to_s %></p>
    <%= link_to 'Unsubscribe', subscribe_path(@subscription.id), :confirm => "Are you sure?", :method => :delete %>
<% end %>

<% end %>

<br />
<br />
<br />
<br />

<h3><%= @show.name %> has the following Seasons:</h3>
<%= render 'seasons/list' %>


<h3>Episodes Overview:</h3>
<%= render 'episodes/list_userview' %>


<h3>Following Users have added this Show:</h3>
<%= render 'users/list' %>
