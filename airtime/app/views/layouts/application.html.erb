<!DOCTYPE html>
<html>
<head>
  <title>Airtime</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">

<div id="header">
  <h1>
      <a id="logo" href="/">
        <%= image_tag "logo.png" %>
        <!-- <img src="app/assets/images/logo.png"> -->
      </a>
  </h1>
  <div id="user_nav">
    <ul class="left">
      <li> <%= link_to "TV Shows", shows_path %> </li> <!-- | -->
      <% if current_user %>
        <li> <%= link_to "Hello "+current_user.name, "/dashboard" %> </li> <!-- | -->
        <li><%= link_to "Dashboard", "/dashboard" %> </li> <!-- | -->
        <li><%= link_to "Logout", sign_out_path %> </li>
      <% else %>
        <li><%= link_to "Register", new_user_path %></li> <!-- | -->
        <li><%= link_to "Login", sign_in_path %></li> <!-- | -->
      <% end %> </li>
    </ul>
    <ul class="right">
      <li><%= form_tag shows_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
        <% end %></li>
    </ul>
  </div>

  <div id="search">

    

  </div>
  <div style="clear:both;"></div>
</div>

<%= yield %>

</div>

</body>
</html>
