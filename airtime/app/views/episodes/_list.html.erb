<table>
  <tr>
    <th>Episode No</th>
    <th>Title</th>
    <th>Airing Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @episodes.each do |episode| %>
  <tr>
    <td>Episode <%= episode.number %></td>
    <td><%= episode.name %></td>
    <td><%= episode.date %></td>
    <td><%= link_to 'Show', episode %></td>
    <td>
      <% permitted_to? :edit, :episode do %>
        <%= link_to 'Edit', edit_episode_path(episode) %>
      <% end %>
    </td>
    <td>
      <% permitted_to? :destroy, :episode do %>
        <%= link_to 'Destroy', episode, confirm: 'Are you sure?', method: :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% permitted_to? :create, :episode do %>
  <%= link_to 'New Episode', new_episode_path %>
<% end %>

