<table>
  <tr>
    <th>Season of TV-Show</th>
    <th>Name</th>
    <th>Number</th>
    <th>Description</th>
    <th>Season Start Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @seasons.each do |season| %>
  <tr>
    <td><%= season.show ? (link_to season.show.name, show_path(season.show)) : "" %></td>
    <td><%= season.name %></td>
    <td><%= season.number %></td>
    <td><%= season.description %></td>
    <td><%= season.date %></td>
    <td><%= link_to 'Show', season %></td>
    <td><%= link_to 'Edit', edit_season_path(season) %></td>
    <td><%= link_to 'Destroy', season, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <% end %>

</table>

